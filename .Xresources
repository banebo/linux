*.foreground: #ffffff
*.background: #000000

! ------------------------------------------------------------------------------
! ROFI Config
! ------------------------------------------------------------------------------
rofi.modi:                           run
rofi.sidebar-mode:                   false
rofi.terminal:                       terminal
rofi.opacity:                        100
rofi.width:                          30
rofi.lines:                          10
rofi.columns:                        1
rofi.font:                           Monospace 11
!rofi.bc:                            #353944
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #000000,  #00b300,  #000000,  #383838,  #e5e540
rofi.color-urgent: #000000,  #00b300,  #000000,  #383838,  #e5e540
rofi.color-active: #000000,  #00b300,  #000000,  #383838,  #e5e540

!                  'background', 'border'
rofi.color-window: #000000,      #00b300
rofi.bw:                             1
rofi.location:                       0
rofi.padding:                        10
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.fuzzy:                          false
rofi.line-margin:                    3
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
rofi.markup-rows:                    false
rofi.scrollbar-width:                0
rofi.color-enabled:                  true

!-------------------------------------------------------------------------------
! URXVT Config
!-------------------------------------------------------------------------------
URxvt.font:           xft:monospace:size=11
URxvt.scrollBar:      False
URxvt.cursorBlink:    True
URxvt.pointerBlank:   True
URxvt.iso14755:       False
URxvt.iso14755_52:    False
! URL handling (install urxvt-perls)
URxvt.perl-ext-common: default,matcher,url-select,keyboard-select
URxvt.colorUL: #7f78e2
URxvt.keysym.M-n: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-launcher: /usr/bin/xdg-open
! Scroll 2 lines
URxvt.keysym.Shift-Up: command:\033]720;2\007
URxvt.keysym.Shift-Down: command:\033]721;2\007
