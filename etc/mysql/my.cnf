# use it for options that affect everything                                     
#                                                                               
# This group is read both both by the client and the server                     
# use it for options that affect everything                                     
#                                                                               
[client]                                                                        
port        = 3306                                                              
socket      = /var/run/mysqld/mysqld.sock                                       
									  
[mysqld_safe]                                                                   
socket      = /var/run/mysqld/mysqld.sock                                       
nice        = 0                                                                 
									   
[mysqld]                                                                        
user        = mysql                                                             
socket      = /var/run/mysqld/mysqld.sock                                       
port        = 3306                                                              
basedir     = /usr                                                              
datadir     = /var/lib/mysql                                                    
tmpdir      = /tmp                                                              
max_connections = 20                                                            
default-time-zone='+02:00'
									   
