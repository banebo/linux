#!/usr/bin/env bash

TMPBG=/tmp/screen.png
LOCK=$HOME/.bin/lock.png
RES=$(xrandr | grep 'current' | sed -E 's/.*current\s([0-9]+)\sx\s([0-9]+).*/\1x\2/')

ffmpeg -f x11grab -video_size $RES -y -i $DISPLAY -i $LOCK -filter_complex "boxblur=7:2,overlay=(main_w-overlay_w)/2:(main_h-overlay_h)/2" -vframes 1 $TMPBG -loglevel quiet
i3lock -ef -i $TMPBG
if [[ $1 == "--suspend" ]]; then
    systemctl suspend -i
fi
rm $TMPBG
